{% extends 'OroSearchBundle:Search:searchResultItem.html.twig' %}

{% set recordUrl = indexer_item.recordUrl %}
{% set title = entity ? entity.code ~ " " ~ entity.summary : indexer_item.title %}

{% set entityType = 'oro.issue.entity_label'|trans %}
{% set showImage = false %}
{% set image = null %}

{% set entityInfo =
    [
        {'title': 'oro.issue.code.label'|trans, 'value': entity.code},
        {'title': 'oro.issue.summary.label'|trans, 'value': entity.summary},
        {'title': 'oro.issue.priority.label'|trans, 'value': entity.priority.label},
        {'title': 'oro.issue.workflow_step.label'|trans, 'value': entity.workflowStep ? entity.workflowStep.label : ''},
        {'title': 'oro.issue.reporter.label'|trans, 'value': entity.reporter},
        {'title': 'oro.issue.assignee.label'|trans, 'value': entity.assignee},
    ]
%}
